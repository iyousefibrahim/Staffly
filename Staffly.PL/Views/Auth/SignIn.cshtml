@model SignInDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn" method="post">
            <input class="text email" asp-for="Email" placeholder="Email" required="" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="text" asp-for="Password" placeholder="Password" required="" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" type="checkbox" class="checkbox"/>
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN" />
        </form>

        <div asp-validation-summary="All" class="text-danger"></div>

        <p>Don't have an Account? <a asp-action="SignUp">SignUp Now!</a></p>
        <p><a asp-action="ForgetPassword">Forget Password?</a></p>

    </div>
</div>

@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
