@model ForgetPasswordDto
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ForgetPassword" method="post">
            <input class="text email" asp-for="Email" placeholder="Email" required="" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="submit" value="Reset Password" />
        </form>

        <div asp-validation-summary="All" class="text-danger"></div>

        <p>Already have an Account? <a asp-action="SignIn">SignIn Now!</a></p>
    </div>
</div>

@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

