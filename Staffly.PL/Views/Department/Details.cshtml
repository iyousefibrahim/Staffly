@model Department
@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<h1>Details Page</h1>
<br />
<br />

<form asp-action="Details">
    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input readonly asp-for="Code" type="text" class="form-control" id="Code">
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input readonly asp-for="Name" type="text" class="form-control" id="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreateAt" class="form-label">Date</label>
        <input readonly asp-for="CreateAt" class="form-control" id="Date">
        <span class="text-danger" asp-validation-for="CreateAt"></span>
    </div>
    <button asp-action="Update" asp-controller="Department" type="submit" class="btn btn-warning">Edit</button>
    <a asp-action="Index" asp-controller="Department" class="btn btn-outline-primary">Back</a>
</form>


