@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" asp-controller="Department"><button class="btn btn-primary">Create Department</button></a>

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details"><button class="btn btn-warning">Details</button></a>
                    </td>
                    <td>
                        <a asp-action="Update"><button class="btn btn-success">Update</button></a>
                    </td>
                    <td>
                        <a asp-action="Delete"><button class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <h4 class="mt-4 alert alert-warning">No departments found!</h4>
}