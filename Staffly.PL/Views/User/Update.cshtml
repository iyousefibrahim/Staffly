@model UpdateUserDto
@{
    ViewData["Title"] = "Update";
}
<br />
<br />
<h1>Update Page</h1>
<br />
<br />
<form asp-action="Update">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">UserName</label>
        <input asp-for="UserName" type="text" class="form-control" id="UserName">
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">FirstName</label>
        <input asp-for="FirstName" type="text" class="form-control" id="FirstName">
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">LastName</label>
        <input asp-for="LastName" type="text" class="form-control" id="LastName">
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="Email">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" asp-controller="Employee" class="btn btn-outline-primary">Back</a>
</form>
@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


