@model IEnumerable<RoleToRetrurnDto>
@{
    ViewData["Title"] = "All Roles";
}
<br />
<br />

<form>
    <div class="input-group mb-3">
        <input type="text" name="SearchInput" class="form-control" placeholder="Search By Role Name" aria-label="Search By Role Name" aria-describedby="button-addon2">
        <button class="btn btn-success" type="submit" id="button-addon2">Search</button>
    </div>
</form>

<br />
<h1>All Roles</h1>
<br />

<a asp-action="Create" asp-controller="Role"><button class="btn btn-primary">Create Role</button></a>


@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button class="btn btn-warning">Details</button>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id">
                            <button class="btn btn-success">Update</button>
                        </a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Role" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="mt-4 alert alert-warning">No Roles found!</h4>
}

