@model RoleToRetrurnDto
@{
    ViewData["Title"] = "Update Role";
    var roleId = ViewData["RoleId"] as string;
}
<br />
<br />
<h1>Update Role</h1>
<br />
<br />
<form asp-action="Update">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Role Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <a asp-action="AddOrRemoveUser" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-outline-warning">Add Or Remove Role</a>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-outline-primary">Back</a>
</form>

@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
